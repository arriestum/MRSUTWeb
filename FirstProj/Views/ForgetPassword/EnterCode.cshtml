@model MRSUTWeb.Web.Models.ResetPasswordViewModel
@{
     ViewBag.Title = "EnterCode";
     Layout = "~/Views/Shared/_LayoutWithUser.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />
<h2>Enter Reset Code</h2>
@using (Html.BeginForm("ResetPassword", "ForgetPassword", FormMethod.Post))
{
     @Html.AntiForgeryToken()

     <div class="form-group">
          <label for="Username">Username</label>
          @Html.TextBox("Username", null, new { @class = "form-control" })
     </div>
     <div class="form-group">
          <label for="Code">Codul primit pe posta:</label>
          @Html.TextBoxFor(model => model.Code, new { @class = "form-control" })
     </div>
     <div class="form-group">
          <label for="NewPassword">Parola noua:</label>
          @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
     </div>
     <button type="submit" class="btn btn-primary">Reseteaza parola</button>
}
