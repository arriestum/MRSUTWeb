
@{
     ViewBag.Title = "LogIn";
     Layout = "~/Views/Home/_LayoutPage1.cshtml";
}

<main id="main">
     <br/><br/>
     <section id="terms-and-conditions" class="terms-and-conditions">
          <div class="container-login">
               <h1>Logare</h1>
               <input type="text" class="login" placeholder="Nume de utilizator"><br />
               <input type="password" class="password" placeholder="Parola">
               <p><input type="checkbox" id="TermsCheck"> Sunt de acord cu @Html.ActionLink("Termenii și condițiile", "TermService", "Home")</p>
               <p><input type="checkbox" id="PrivacyCheck"> Sunt de acord cu @Html.ActionLink("Politica de confidențialitate", "PrivacyPolicy", "Home")</p>

               <button class="LogInButton" id="LogInButton" onclick="redirectToPage()">Logare</button>

               <p><br />@Html.ActionLink("Ati uitat parola?", "ForgetPass", "Home")</p>
          </div>
     </section>
    

</main><!-- End #main -->
